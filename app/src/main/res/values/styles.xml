<resources>
    <!-- 工具栏标题：与菜单图标对齐 -->
    <style name="TextAppearance.DanmuApiApp.ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- 底部导航选中指示 -->
    <style name="Widget.DanmuApiApp.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DanmuApiApp.BottomNavIndicator</item>
        <item name="marginHorizontal">16dp</item>
    </style>

    <!-- 底部导航指示形状（圆角胶囊） -->
    <style name="ShapeAppearance.DanmuApiApp.BottomNavIndicator" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">16dp</item>
    </style>

</resources>
