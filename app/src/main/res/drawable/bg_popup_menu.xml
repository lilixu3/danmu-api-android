<?xml version="1.0" encoding="utf-8"?>
<!--
  Toolbar overflow / popup menu background.
  Fixes: in dark mode some devices would still use a pure-white floating background,
  making the menu unreadable (white bg + light text).
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/colorSurface" />
    <corners android:radius="16dp" />
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />
</shape>
